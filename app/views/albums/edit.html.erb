<h1> Edit <%= @album.name %> | Spotifake</h1>

<form action="<%= album_url(@album) %>" method="POST">

  <input type="hidden" name="_method" value= "PATCH">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

<label for="album_name">
  Album Name
  <input type="text"
         name="album[name]"
         id="album_name"
         value="<%= @album.name %>">
</label>
<input type="submit">
</form>
