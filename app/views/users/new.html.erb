<h1>Sign up</h1>

<form action="<%= users_url %>" method="post">
  <input
    name ="_method"
    type = "hidden"
    value = "post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

<label for="user_email">
  Email
  <input type="text"
         name="user[email]"
         id="user_email">
</label>
<br>
<label for="user_email">
  Password
  <input type="password",
         name="user[password]",
         id="user_password">
</label>
<br>
  <input type="submit">
</form>

